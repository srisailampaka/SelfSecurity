<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tutorialandroid.selfsecurity">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <permission android:name="com.tutorialandroid.selfsecurity.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="com.tutorialandroid.selfsecurity.WRITE_DATABASE" android:protectionLevel="normal" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:name=".SecurityApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tutorialandroid.selfsecurity.activitys.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tutorialandroid.selfsecurity.activitys.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.tutorialandroid.selfsecurity.activitys.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.PersonalInformationActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.EmergencyContactsActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.AddFromContactsActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.AddNewContactsActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.SavedContactListActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.EditContactsActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.PanicActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.FirstAidInfoActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.SettingActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.MessageSettingActivity" />
        <activity android:name="com.tutorialandroid.selfsecurity.activitys.TimerSettingActivity">
            <!--   <intent-filter>
                   <action android:name="android.intent.action.MAIN" />

                   <category android:name="android.intent.category.LAUNCHER" />
               </intent-filter>-->
        </activity>
        <provider
            android:authorities="com.tutorialandroid.selfsecurity"
            android:name=".database.ContactsProvider"
            android:exported="true"
            android:readPermission="com.tutorialandroid.selfsecurity.READ_DATABASE"
            android:writePermission="com.tutorialandroid.selfsecurity.WRITE_DATABASE"
            />
    </application>

</manifest>